@model IEnumerable<SAH.Models.CoursesDto>

@{
    ViewBag.Title = "List";
}

<h2>Internal Education Portal</h2>


    @Html.ActionLink("Create New", "Create")

<h4>Course List</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CourseId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CourseId }) |
                @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.CourseId })
            </td>
        </tr>
    }

</table>
