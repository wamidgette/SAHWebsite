@model SAH.Models.ModelViews.ListCourses

@{
    ViewBag.Title = "List";
}

<h2>Internal Education Portal</h2>
@if (Model.isadmin)
{
        @Html.ActionLink("Add New Course", "Create") 
}
<div>
    @if (Model.isadmin)
    {
        @Html.ActionLink("See All Applications", "../EmployeeApplicant/List")
    }
</div>
    <h4>Course List</h4>

    <table class="table">
        <tr>
            <th>
                Course Code
            </th>
            <th>
                Course Name
            </th>

            <th></th>
        </tr>

        @foreach (var course in Model.courselist)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => course.CourseCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => course.CourseName)
                </td>

                <td>
                    @Html.ActionLink(" Details |", "Details", new { id = course.CourseId }) 
                    @Html.ActionLink(" Register ", "../EmployeeApplicant/Create")

                    @if (Model.isadmin)
                    {
                        @Html.ActionLink(" | Edit |", "Edit", new { id = course.CourseId })   
                        @Html.ActionLink(" Delete ", "DeleteConfirm", new { id = course.CourseId })
                    }
                </td>
            </tr>
        }

    </table>
