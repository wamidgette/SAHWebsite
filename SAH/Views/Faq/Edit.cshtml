@model SAH.Models.ModelViews.EditFaq

@{
    ViewBag.Title = "Edit FAQ";
}

<h2>Edit FAQ</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>FaqDto</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Faq.FaqID)

    <div class="form-group">
        @Html.LabelFor(model => model.Faq.Question, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Faq.Question, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Faq.Question, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Faq.Answer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Faq.Answer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Faq.Answer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Faq.DepartmentID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            <select name="DepartmentID" class="form-control">
                @foreach (var department in Model.Departments)
                {
                    //Auto-selects the department the player is currently assigned to
                    string selected = "";
                    if (Model.Faq.DepartmentID == department.DepartmentId)
                    {
                        selected = "selected";
                    }
                    <option value="@department.DepartmentId" @selected>@department.DepartmentName</option>
                }
            </select>
        </div>
    </div>

    <div class="form-check">
        @Html.LabelFor(model => model.Faq.Publish, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Faq.Publish)
                @Html.ValidationMessageFor(model => model.Faq.Publish, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "AdminList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
