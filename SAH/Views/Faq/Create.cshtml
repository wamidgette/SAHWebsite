@model SAH.Models.ModelViews.EditFaq

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Faq</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Faq.Question, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Faq.Question, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
            @Html.ValidationMessageFor(model => model.Faq.Question, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Faq.Answer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.Faq.Answer, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.TextAreaFor(model => model.Faq.Answer, new { cols = 100, @rows = 3, @class = "form-control", @style = "max-width: 100%" })
            @Html.ValidationMessageFor(model => model.Faq.Answer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Faq.DepartmentID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.Faq.DepartmentID, Model.DepartmentsSelectList, "-- Please Select --", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Faq.DepartmentID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-check">
        @Html.LabelFor(model => model.Faq.Publish, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Faq.Publish)
                @Html.ValidationMessageFor(model => model.Faq.Publish, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "AdminList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
