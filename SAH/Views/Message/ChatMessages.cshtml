@model IEnumerable<SAH.Models.MessageDto>

@{
    ViewBag.Title = "ChatMessages";
}

<h2>Messages In Chat @Model.First().ChatId</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SenderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateSent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SenderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.ActionLink("Details", "Show", new { id = item.MessageId })

            </td>
        </tr>
    }
</table>
    <div>
        @Html.ActionLink("New Message", "Create", new { id = Model.First().ChatId })
        @Html.ActionLink("Back to Chat List", "../Chat/List", new { id = Model.First().ChatId })

    </div>

