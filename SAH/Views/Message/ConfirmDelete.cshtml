@model SAH.Models.MessageDto

@{
    ViewBag.Title = "ConfirmDelete";
}

<h2>Confirm Delete</h2>

<h3>Are you sure you want to delete this message?</h3>
<div>
    <h4>Message</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DateSent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateSent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "Message")) {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            @Html.HiddenFor(model => model.ChatId, new { Name = "chatId" })
            @Html.HiddenFor(model => model.MessageId, new { Name = "messageId" })
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Message", "Show", new { id = Model.MessageId })
        </div>
    }
</div>
